@using ContactWeb.Models;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
</head>
<body>
    <ul class="menu">
        <li @(ViewContext.Controller.GetType().Name == "HomeController" ? "class=selected" : String.Empty)>
            @Html.ActionLink("Home", "Index", "Home")
        </li>
        <li @(ViewContext.Controller.GetType().Name == "ContactController" ? "class=selected" : String.Empty)>
            @Html.ActionLink("Contact", "Index", "Contact", new { Prefix = "A", Ascending = true }, null)
        </li>
        <li @(ViewContext.Controller.GetType().Name == "DonutHoleController" ? "class=selected" : String.Empty)>
            @Html.ActionLink("DonutHole", "Index", "DonutHole")
        </li>
        <li @(ViewContext.Controller.GetType().Name == "HTMLFragmentController" ? "class=selected" : String.Empty)>
            @Html.ActionLink("HTMLFragment", "Index", "HTMLFragment")
        </li>
        <li @(ViewContext.Controller.GetType().Name == "JsonController" ? "class=selected" : String.Empty)>
            @Html.ActionLink("Json Controller", "Index", "Json")
        </li>
    </ul>
    
    @Html.Exclamation("hello");
    <div style="clear: both; height: 0px" />
    <div id="content">
        @RenderBody()
    </div>
</body>
</html>
