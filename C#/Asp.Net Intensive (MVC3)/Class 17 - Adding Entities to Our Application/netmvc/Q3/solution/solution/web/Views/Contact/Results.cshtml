@model ContactWeb.Models.ListViewModel

@{
    ViewBag.Title = "Index";
    Layout = null;
}



<h3>@(Model.Ascending ? "Ascending" : "Descending")</h3>

<ul class="menu letterMenu small">
@foreach (var letter in Model.Letters)
{
    
    if (Model.LetterIsLive(letter))
    {
        <li @(Model.LetterIsSelected(letter)?"class=selected" : String.Empty)>@Html.ActionLink(letter, "Results", new{Prefix= letter, Ascending = Model.LetterIsSelected(letter) ? !Model.Ascending : true})</li>
    }
    else
    {
        <li>@letter</li>
    }
}
</ul>

<br clear="all" />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            FirstName
        </th>
        <th class="sortColumn">
            LastName
        </th>
        <th>
            Email
        </th>
        <th>
            FullName
        </th>
        <th>
            Prefix
        </th>
        <th>
            Lucky Number
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Contacts) {
    <tr>
        <td>

            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td class="sortColumn">
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prefix)
        </td>
        <td>
            @item.LuckyNumber
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Edit Friends", "Edit", "Friend", new { id=item.Id }, null) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @using (Html.BeginForm("Delete", "Contacts", FormMethod.Post, new { style="display:inline" }))
            {
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "postLink"})
            }
        </td>
    </tr>
}
</table>
