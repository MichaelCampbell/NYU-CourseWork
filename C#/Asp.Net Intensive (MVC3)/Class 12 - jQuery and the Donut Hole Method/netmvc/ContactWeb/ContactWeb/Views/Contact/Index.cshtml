@model ContactWeb.Models.ListViewModel

@{
    ViewBag.Title = "Index";
}


<h2>Index</h2>

<ul class="menu letterMenu">
@foreach (var letter in Model.Letters)
{
    
    if (Model.LetterIsLive(letter))
    {
        <li @(Model.LetterIsSelected(letter)?"class=selected" : String.Empty)>@Html.ActionLink(letter, "Index", new{Prefix= letter})</li>
    }
    else
    {
        <li>@letter</li>
    }
}
</ul>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            FirstName
        </th>
        <th>
            LastName
        </th>
        <th>
            Email
        </th>
        <th>
            FullName
        </th>
        <th>
            Prefix
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Contacts) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prefix)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
